{
  "name": "inventory-offline-electron",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "description": "Offline Inventory Desktop App (Electron + Vite) - Windows NSIS installer.",
  "author": "you",
  "scripts": {
    "dev": "vite",
    "build:renderer": "vite build",
    "dist": "vite build && electron-builder -w"
  },
  "dependencies": {
    "lucide-react": "^0.379.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.5.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.20",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.example.inventory.offline",
    "productName": "Inventory Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": "nsis",
      "artifactName": "Inventory-Desktop-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  }
}